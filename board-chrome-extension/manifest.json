{
    "manifest_version": 2,
    "name": "Taskboard Hyperlink Extension",
    "description": "Add the hyperlink of the current page to the taskboard selected with this plugin.",
    "version": "0.2.1",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "http://*/*", 
        "https://*/*"
    ],
    "options_ui": {
        // Required.
        "page": "options.html",
        // Recommended.
        "chrome_style": true
        // Not recommended; only provided for backwards compatibility,
        // and will be unsupported in a future version of Chrome (TBD).
        //"open_in_tab": true
    }
}