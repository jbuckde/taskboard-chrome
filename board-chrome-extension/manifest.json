{
    "manifest_version": 2,
    "name": "Taskboard Hyperlink Extension",
    "description": "Add the hyperlink of the current page to the taskboard selected with this plugin.",
    "version": "0.3",
    "browser_action": {
        "default_icon": "logo.png",
        "default_popup": "popup.html"
    },
    "icons": { 
        "16": "logo.png",
        "48": "logo48.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "http://*/*", 
        "https://*/*"
    ],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    }
}