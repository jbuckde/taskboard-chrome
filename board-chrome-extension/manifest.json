{
    "manifest_version": 2,
    "name": "Taskboard Hyperlink Extension",
    "description": "Add the hyperlink of the current page to the taskboard selected with this plugin.",
    "version": "0.2",
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", 
        "http://*/*", 
        "https://*/*"
    ]
}